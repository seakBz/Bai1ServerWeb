@using Baitap1_Server.Models;
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - Ngô Đình Phúc</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        @{ Response.Write(BaiTap.AutoMat());}
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p class="text-center" id="footer"></p>
                <p class="text-center">&copy; @DateTime.Now.Year - My ASP.NET Application</p><br />
            </footer>
        </div>
        <script src="~/Scripts/PadingPage.js"></script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>